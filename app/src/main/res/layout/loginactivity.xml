<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#133C7E"
        android:padding="24dp">

        <!-- Nama Aplikasi -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIVASAK"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Card View untuk Form Login -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="#D3D1E4"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@color/purple1"
                android:orientation="vertical">

                <!-- Text View untuk Judul "Login" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Username Field -->
                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/box"
                    android:layout_marginBottom="13dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"/>

                <!-- Password Field -->
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/box"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"/>

                <!-- Checkbox untuk Show Password -->
                <CheckBox
                    android:id="@+id/showPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Password"
                    android:textColor="#000000"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="13dp"/>

                <!-- Tombol Login -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:backgroundTint="#383843"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
